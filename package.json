{
  "name": "my-app",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "dev:clean": "powershell -Command \"if (Test-Path .next) { Remove-Item -Recurse -Force .next }\" && next dev",
    "dev:encrypted": "node scripts/encrypt-env.js && next dev",
    "build": "next build",
    "build:dev": "next build",
    "build:prod": "npm run lint && next build",
    "start": "next start",
    "start:dev": "next start -p 3000",
    "start:prod": "next start -p 3000",
    "lint": "next lint",
    "clean": "if exist .next rmdir /s /q .next && if exist node_modules\\.cache rmdir /s /q node_modules\\.cache",
    "clean:all": "if exist .next rmdir /s /q .next && if exist node_modules\\.cache rmdir /s /q node_modules\\.cache && npm install",
    "encrypt:env": "node scripts/encrypt-env.js",
    "encrypt:dev": "node scripts/encrypt-env-auto.js dev",
    "encrypt:prod": "node scripts/encrypt-env-auto.js prod",
    "package:offline": "npm pack --pack-destination ./dist/offline-packages",
    "security:audit": "npm audit --audit-level=moderate",
    "security:check": "npm audit && npm outdated",
    "db:schema": "mysql -u $DB_USER -p$DB_PASSWORD $DB_NAME < database/schema.sql",
    "db:init": "mysql -u $DB_USER -p$DB_PASSWORD $DB_NAME < database/initial-data.sql",
    "docker:build": "docker build -t campaign-system:latest .",
    "docker:prod": "docker-compose -f docker-compose.prod.yml up -d",
    "backup:db": "mysqldump -u $DB_USER -p$DB_PASSWORD $DB_NAME > backup/db-$(date +%Y%m%d_%H%M%S).sql",
    "logs:clean": "find logs -name '*.log' -mtime +30 -delete",
    "setup:dev": "copy env.development.template .env.development && echo 개발 환경 설정이 생성되었습니다. .env.development 파일을 수정하세요.",
    "setup:prod": "copy env.production.template .env.production && echo 운영 환경 설정이 생성되었습니다. .env.production 파일을 수정하고 암호화하세요."
  },
  "dependencies": {
    "@firebase/auth": "^1.10.6",
    "@types/nodemailer": "^6.4.17",
    "bcryptjs": "^2.4.3",
    "dotenv": "^16.5.0",
    "firebase": "^11.8.1",
    "jose": "^6.0.11",
    "jspdf": "^3.0.1",
    "jspdf-autotable": "^5.0.2",
    "mysql2": "^3.6.5",
    "next": "14.1.0",
    "nodemailer": "^7.0.3",
    "react": "^18",
    "react-dom": "^18",
    "recharts": "^2.15.3",
    "sqlite3": "^5.1.7",
    "winston": "^3.17.0",
    "winston-daily-rotate-file": "^5.0.0",
    "xlsx": "^0.18.5"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/node": "^20.17.54",
    "@types/react": "^18.3.23",
    "@types/react-dom": "^18",
    "autoprefixer": "^10.0.1",
    "eslint": "^8",
    "eslint-config-next": "14.1.0",
    "postcss": "^8",
    "tailwindcss": "^3.3.0",
    "typescript": "^5"
  },
  "engines": {
    "node": ">=18.17.0",
    "npm": ">=9.0.0"
  }
}
